<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <CheckBox
        android:id="@+id/cbDelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:text="delay"
        android:visibility="invisible" />
    <RelativeLayout
        android:id="@+id/rlAddBill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/ic_dialog_email"
                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView
                android:layout_toLeftOf="@+id/miniFab01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="复位"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/ll01"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_dialog_email"
                android:layout_marginRight="25dp"
                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView

                android:layout_toLeftOf="@+id/miniFab02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="卫星地图"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/ll02"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/ic_dialog_email"
                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView
                android:layout_toLeftOf="@+id/miniFab02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="普通地图"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/ll03"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/ic_dialog_email"

                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView
                android:id="@+id/miniFab02Text"
                android:layout_toLeftOf="@+id/miniFab02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="显示路况"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/ll04"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/ic_dialog_email"

                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView
                android:id="@+id/miniFabHertText"

                android:layout_toLeftOf="@+id/miniFab02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="城市热力图"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/ll05"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/miniFab06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/ic_dialog_email"

                app:fabSize="mini"
                app:elevation="5dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_botton"

                />
            <TextView
                android:layout_toLeftOf="@+id/miniFab02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="搜索设备"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingBottom="5dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab01Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/cbDelay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        app:backgroundTint="#31bfcf"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="#e7d161"
        app:srcCompat="@android:drawable/ic_dialog_map" />
</RelativeLayout>